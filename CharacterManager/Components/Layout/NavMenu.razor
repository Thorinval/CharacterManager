@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CharacterManager</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Accueil
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="escouade">
                <span class="bi bi-person-lines-fill-nav-menu" aria-hidden="true"></span> Escouade
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inventaire">
                <span class="bi bi-person-lines-fill-nav-menu" aria-hidden="true"></span> Inventaire
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="import-csv">
                <span class="bi bi-cloud-arrow-up-nav-menu" aria-hidden="true"></span> Importer CSV
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <button class="nav-link nav-link-button" @onclick="ShowAbout">
                <span class="bi bi-info-circle-nav-menu" aria-hidden="true"></span> À propos
            </button>
        </div>
    </nav>
</div>

<style>
    .nav-link-button {
        background: none;
        border: none;
        width: 100%;
        text-align: left;
        cursor: pointer;
    }
</style>

@code {
    [Parameter]
    public EventCallback OnAboutClick { get; set; }

    private async Task ShowAbout()
    {
        await OnAboutClick.InvokeAsync();
    }
}