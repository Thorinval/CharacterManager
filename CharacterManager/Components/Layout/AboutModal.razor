@using CharacterManager.Services
@inject AppVersionService VersionService
@rendermode InteractiveServer

@if (IsVisible)
{
    <div class="modal-overlay-about" @onclick="Close">
        <div class="modal-dialog-about" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">À propos</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <div class="app-icon mb-3">
                        <i class="bi bi-info-circle" style="font-size: 4rem; color: #0d6efd;"></i>
                    </div>
                    <h3>@VersionService.GetAppName()</h3>
                    <p class="text-muted mb-3">@VersionService.GetDescription()</p>
                    
                    <div class="version-info my-4">
                        <div class="mb-2">
                            <strong>Version:</strong> @VersionService.GetAppVersion()
                        </div>
                        <div class="mb-2">
                            <strong>Build:</strong> @VersionService.GetBuildVersion()
                        </div>
                        <div class="mb-2">
                            <strong>Commit:</strong> <code>@VersionService.GetGitCommitHash()</code>
                        </div>
                    </div>

                    <hr />

                    <div class="author-info mt-3">
                        <p><strong>Développé par:</strong></p>
                        <p class="lead">@VersionService.GetAuthor()</p>
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">© @DateTime.Now.Year - Tous droits réservés</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="Close">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <style>
        .modal-overlay-about {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 2000;
        }

        .modal-dialog-about {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.3);
            max-width: 500px;
            width: 90%;
            z-index: 2001;
        }

        .version-info {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 0.375rem;
            border: 1px solid #dee2e6;
        }

        .author-info {
            font-size: 1rem;
        }

        .app-icon {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
    </style>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    private async Task Close()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(IsVisible);
    }
}
