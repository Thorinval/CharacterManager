@using CharacterManager.Components.Layout
@using CharacterManager.Components
@inherits LayoutComponentBase

@* Composants utilisés dans ce layout *@

<div class="page">
    <div class="sidebar">
        <NavMenu OnAboutClick="ShowAboutModal" />
    </div>

    <main>
        <div class="top-row px-4">
            <button class="about-link" @onclick="ShowAboutModal">À propos</button>
        </div>

        <article class="content px-4">
            <UpdateNotification />
            @Body
        </article>
    </main>
</div>

<AboutModal @bind-IsVisible="showAboutModal" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<style>
    .about-link {
        background: none;
        border: none;
        color: inherit;
        cursor: pointer;
        text-decoration: none;
        font: inherit;
    }
    
    .about-link:hover {
        text-decoration: underline;
    }
</style>

@code {
    private bool showAboutModal = false;

    private void ShowAboutModal()
    {
        showAboutModal = true;
        StateHasChanged();
    }
}
