@inherits LayoutComponentBase
@rendermode InteractiveServer

<div class="page">
    <div class="sidebar">
        <NavMenu OnAboutClick="ShowAboutModal" />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="#" @onclick="ShowAboutModal" @onclick:preventDefault style="cursor: pointer;">À propos</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<AboutModal @bind-IsVisible="showAboutModal" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool showAboutModal = false;

    private void ShowAboutModal()
    {
        showAboutModal = true;
    }
}
