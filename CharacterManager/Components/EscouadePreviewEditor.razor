@implements IDisposable
@using CharacterManager.Server.Models
@using CharacterManager.Server.Services

<div class="escouade-preview-editor-container">
    <div class="escouade-preview-header">
        <h3>Créer un Template</h3>
        <div class="escouade-preview-stats">
            <span>Puissance: <strong>@PuissanceTotal</strong></span>
        </div>
    </div>

    <div class="escouade-preview-sections">
        <!-- Commandant -->
        <div class="preview-section">
            <h5>Commandant</h5>
              <div class="preview-slot preview-slot-standard" 
                  @ondrop="@(e => HandleDrop(0))"
                  @ondragover:preventDefault
                  style="@GetSlotStyle(0)">
                <div class="slot-type-badge">Commandant</div>
                @if (PersonnagesSelectionnes.Count > 0 && PersonnagesSelectionnes[0] != null)
                {
                    <div class="preview-card" @onclick="@(() => RemovePersonnage(0))">
                        <img src="@PersonnagesSelectionnes[0]!.ImageUrlPreview" 
                             alt="@PersonnagesSelectionnes[0]!.Nom" 
                             title="Cliquez pour retirer"
                             onerror="this.onerror=null; this.src='/images/personnages/default_portrait.png';">
                        <span class="puissance">@PersonnagesSelectionnes[0]!.Puissance</span>
                    </div>
                }
                else
                {
                    <div class="empty-slot">
                        <i class="bi bi-plus"></i>
                        <p>Glissez-déposez un commandant</p>
                    </div>
                }
            </div>
        </div>

        <!-- Mercenaires -->
        <div class="preview-section">
            <h5>Mercenaires (jusqu'à 8)</h5>
            <div class="preview-grid">
                @for (int i = 1; i <= 8; i++)
                {
                    int index = i;
                    <div class="preview-slot"
                        @ondrop="@(e => HandleDrop(index))"
                        @ondragover:preventDefault
                        style="@GetSlotStyle(index)">
                        <div class="slot-type-badge">Mercenaire</div>
                        @if (PersonnagesSelectionnes.Count > index && PersonnagesSelectionnes[index] != null)
                        {
                            <div class="preview-card" @onclick="@(() => RemovePersonnage(index))">
                                <img src="@PersonnagesSelectionnes[index]!.ImageUrlPreview"
                                     alt="@PersonnagesSelectionnes[index]!.Nom"
                                     title="Cliquez pour retirer"
                                     onerror="this.onerror=null; this.src='/images/personnages/default_portrait.png';">
                                <span class="puissance">@PersonnagesSelectionnes[index]!.Puissance</span>
                            </div>
                        }
                        else
                        {
                            <div class="empty-slot">
                                <i class="bi bi-plus"></i>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Androïdes -->
        <div class="preview-section">
            <h5>Androïdes (jusqu'à 3)</h5>
            <div class="preview-grid">
                @for (int i = 9; i <= 11; i++)
                {
                    int index = i;
                    <div class="preview-slot"
                        @ondrop="@(e => HandleDrop(index))"
                        @ondragover:preventDefault
                        style="@GetSlotStyle(index)">
                        <div class="slot-type-badge">Androïde</div>
                        @if (PersonnagesSelectionnes.Count > index && PersonnagesSelectionnes[index] != null)
                        {
                            <div class="preview-card" @onclick="@(() => RemovePersonnage(index))">
                                <img src="@PersonnagesSelectionnes[index]!.ImageUrlPreview"
                                     alt="@PersonnagesSelectionnes[index]!.Nom"
                                     title="Cliquez pour retirer"
                                     onerror="this.onerror=null; this.src='/images/personnages/default_portrait.png';">
                                <span class="puissance">@PersonnagesSelectionnes[index]!.Puissance</span>
                            </div>
                        }
                        else
                        {
                            <div class="empty-slot">
                                <i class="bi bi-plus"></i>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .escouade-preview-editor-container {
        background: linear-gradient(135deg, #f0f4f8 0%, #e8eef7 100%);
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .escouade-preview-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 2px solid #add8e6;
        padding-bottom: 10px;
    }

    .escouade-preview-header h3 {
        margin: 0;
        color: #333;
        font-weight: bold;
    }

    .escouade-preview-stats {
        display: flex;
        gap: 20px;
        font-size: 14px;
    }

    .escouade-preview-sections {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .preview-section {
        background: white;
        border-radius: 6px;
        padding: 15px;
        border: 1px solid #ddd;
    }

    .preview-section h5 {
        margin: 0 0 10px 0;
        color: #333;
        font-weight: bold;
        font-size: 14px;
    }

    .preview-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 10px;
    }

    .preview-slot {
        width: 100%;
        aspect-ratio: 0.75;
        border: 2px dashed #bbb;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f9f9f9;
        cursor: pointer;
        transition: all 0.2s ease;
        position: relative;
    }

    .preview-slot:hover {
        border-color: #999;
        background: #efefef;
    }

    .preview-slot.drag-over {
        border-color: #4caf50;
        background: #e8f5e9;
        box-shadow: 0 0 8px rgba(76, 175, 80, 0.3);
    }

    .preview-card {
        width: 100%;
        height: 100%;
        position: relative;
        cursor: pointer;
        border-radius: 4px;
        overflow: hidden;
        display: flex;
        align-items: flex-end;
        justify-content: center;
    }

    .preview-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .preview-card .puissance {
        position: absolute;
        top: 4px;
        right: 4px;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 2px 6px;
        border-radius: 3px;
        font-size: 12px;
        font-weight: bold;
    }

    .empty-slot {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        color: #999;
        text-align: center;
    }

    .empty-slot i {
        font-size: 24px;
        margin-bottom: 5px;
    }

    .empty-slot p {
        margin: 0;
        font-size: 11px;
    }

    .slot-type-badge {
        position: absolute;
        top: 6px;
        left: 6px;
        background: rgba(173, 216, 230, 0.9);
        color: #0b3d91;
        font-weight: 600;
        font-size: 11px;
        padding: 2px 6px;
        border-radius: 4px;
    }

    .preview-slot-standard {
        width: 100px;
        max-width: 100px;
    }
</style>

@code {
    [Parameter]
    public List<Personnage?> PersonnagesSelectionnes { get; set; } = new();

    [Parameter]
    public EventCallback<List<int>> OnSelectionChanged { get; set; }

    [Parameter]
    public Func<int, Task<Personnage?>>? OnPersonnageRequested { get; set; }

    [Parameter]
    public int? DraggedPersonnageId { get; set; }

    [Parameter]
    public EventCallback<string> OnInvalidDrop { get; set; }

    public int PuissanceTotal => PersonnagesSelectionnes.Sum(p => p?.Puissance ?? 0);

    private string GetSlotStyle(int index)
    {
        return "";
    }

    private bool IsTypeAllowed(int slotIndex, TypePersonnage type)
    {
        if (slotIndex == 0) return type == TypePersonnage.Commandant;
        if (slotIndex >= 1 && slotIndex <= 8) return type == TypePersonnage.Mercenaire;
        if (slotIndex >= 9 && slotIndex <= 11) return type == TypePersonnage.Androïde;
        return false;
    }

    private async Task HandleDrop(int slotIndex)
    {
        try
        {
            System.Diagnostics.Debug.WriteLine($"HandleDrop called for slot {slotIndex}, DraggedPersonnageId={DraggedPersonnageId}");
            
            if (DraggedPersonnageId is null)
            {
                System.Diagnostics.Debug.WriteLine("Drop failed: DraggedPersonnageId is null");
                return;
            }

            if (OnPersonnageRequested is null)
            {
                System.Diagnostics.Debug.WriteLine("Drop failed: OnPersonnageRequested is null");
                return;
            }

            var personnage = await OnPersonnageRequested.Invoke(DraggedPersonnageId.Value);
            System.Diagnostics.Debug.WriteLine($"Retrieved personnage: {personnage?.Nom ?? "null"}");
            if (personnage == null)
                return;

            // Étendre la liste si nécessaire
            while (PersonnagesSelectionnes.Count <= slotIndex)
                PersonnagesSelectionnes.Add(null);

            if (!IsTypeAllowed(slotIndex, personnage.Type))
            {
                var expected = slotIndex == 0 ? TypePersonnage.Commandant : (slotIndex <= 8 ? TypePersonnage.Mercenaire : TypePersonnage.Androïde);
                var msg = $"Ce slot accepte {expected}. Type reçu: {personnage.Type}";
                if (OnInvalidDrop.HasDelegate)
                {
                    await OnInvalidDrop.InvokeAsync(msg);
                }
                return;
            }

            PersonnagesSelectionnes[slotIndex] = personnage;

            // Notifier le parent
            var ids = PersonnagesSelectionnes
                .Where(p => p is not null)
                .Select(p => p!.Id)
                .ToList();
            await OnSelectionChanged.InvokeAsync(ids);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error in HandleDrop: {ex.Message}");
        }
    }

    private async Task RemovePersonnage(int index)
    {
        if (index < PersonnagesSelectionnes.Count)
        {
            PersonnagesSelectionnes[index] = null;
            var ids = PersonnagesSelectionnes
                .Where(p => p is not null)
                .Select(p => p!.Id)
                .ToList();
            await OnSelectionChanged.InvokeAsync(ids);
        }
    }

    public void Dispose()
    {
        GC.SuppressFinalize(this);
    }

    public class DragData
    {
        public int PersonnageId { get; set; }
        public string Nom { get; set; } = string.Empty;
    }
}
