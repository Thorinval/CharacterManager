            border-radius: 4px;
        }

        .select-all-container input[type="checkbox"] {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }

        .select-all-container label {
            margin: 0;
            cursor: pointer;
            user-select: none;
        }

        /* Styles pour le titre */
        .inventaire-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: white;
            text-shadow: 
                -2px -2px 0 #000,
                2px -2px 0 #000,
                -2px 2px 0 #000,
                2px 2px 0 #000,
                -3px 0 0 #000,
                3px 0 0 #000,
                0 -3px 0 #000,
                0 3px 0 #000;
            margin-bottom: 0.5rem;
        }

        .inventaire-subtitle {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 1.5rem;
        }

        /* Styles pour le Template Editor */
        .template-editor-wrapper {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
