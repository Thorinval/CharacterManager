@page "/"
@inject AppVersionService VersionService
@using CharacterManager.Server.Services

<PageTitle>Accueil</PageTitle>

<div class="page-header-banner">
    <img src="/images/interface/menu-icon.png" alt="" class="page-header-icon" />
    <h1 class="page-title">ACCUEIL</h1>
    <div class="header-actions">
        <a href="/settings" class="settings-link" title="Paramètres">
            <img src="/images/interface/gear.gif" alt="Paramètres" class="settings-icon" />
        </a>
    </div>
</div>

<div class="home-container">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-6 col-lg-5 col-xl-4 offset-md-6 offset-lg-7 offset-xl-8">
                <div class="welcome-card">
                    <h1>Character Manager</h1>
                    <p class="lead">Bienvenue sur votre gestionnaire de personnages</p>
                    
                    <hr />
                    
                    <div class="features-section">
                        <h3>Fonctionnalités principales :</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="features-list">
                                    <li><strong>Escouade :</strong> Composez votre équipe de mercenaires, commandants et androïdes</li>
                                    <li><strong>Inventaire :</strong> Gérez tous vos personnages avec tri, filtres et recherche</li>
                                    <li><strong>Sélection multiple :</strong> Modifiez plusieurs personnages en une fois</li>
                                    <li><strong>Détails complets :</strong> Consultez stats, capacités et caractéristiques</li>
                                    <li><strong>Import/Export CSV :</strong> Importez et exportez vos données facilement</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="features-list">
                                    <li><strong>Images dynamiques :</strong> Visualisez vos personnages avec plusieurs vues</li>
                                    <li><strong>Gestion des rangs :</strong> Système d'étoiles pour les rangs (1-7)</li>
                                    <li><strong>Calcul de puissance :</strong> Puissance totale et maximale de l'escouade</li>
                                    <li><strong>Filtres avancés :</strong> Par rareté, type, faction et rôle</li>
                                    <li><strong>Persistance SQLite :</strong> Base de données locale intégrée</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="version-info">
                        <small class="text-muted">Version: @VersionService.GetFullVersionString()</small>
                    </div>

                    <div class="mt-4 text-center">
                        <a href="/escouade" class="btn btn-primary btn-lg me-2">
                            <i class="bi bi-people-fill"></i> Escouade
                        </a>
                        <a href="/inventaire" class="btn btn-primary btn-lg">
                            <i class="bi bi-grid-3x3-gap-fill"></i> Inventaire
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .home-container {
        position: relative;
        min-height: 100vh;
        background-image: url('/images/personnages/accueil.png');
        background-size: auto 100%;
        background-position: left center;
        background-repeat: no-repeat;
    }

    .home-container .container-fluid {
        position: relative;
        z-index: 2;
    }

    .welcome-card {
        background: rgba(102, 126, 234, 0.85);
        backdrop-filter: blur(10px);
        color: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .welcome-card h1 {
        font-size: 2.8rem;
        margin-bottom: 10px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .welcome-card .lead {
        font-size: 1.4rem;
        opacity: 0.95;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    .features-section {
        margin: 20px 0;
    }

    .features-section h3 {
        font-size: 1.6rem;
        margin-bottom: 20px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    .features-list {
        list-style: none;
        padding: 0;
    }

    .features-list li {
        padding: 8px 0;
        padding-left: 30px;
        position: relative;
        font-size: 1rem;
        line-height: 1.6;
    }

    .features-list li:before {
        content: "✓";
        position: absolute;
        left: 0;
        font-weight: bold;
        font-size: 1.3rem;
        color: #90EE90;
    }

    .version-info {
        margin-top: 20px;
        text-align: right;
        opacity: 0.8;
    }

    .btn-primary {
        background-color: rgba(255, 255, 255, 0.25);
        border: 2px solid white;
        color: white;
        transition: all 0.3s ease;
        font-weight: 600;
        padding: 12px 30px;
    }

    .btn-primary:hover {
        background-color: rgba(255, 255, 255, 0.4);
        border-color: white;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    }

    .btn-primary i {
        margin-right: 8px;
    }
    </style>
