@page "/"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@inject AppVersionService VersionService
@inject ClientLocalizationService LocalizationService
@using CharacterManager.Server.Services

<link rel="stylesheet" href="/Styles/Home.css" />

<PageTitle><LocalizedText Key="navigation.home" /></PageTitle>

<div class="home-container">
    <div class="container-fluid home-row g-0">
        <div class="row align-items-stretch g-0">
            <div class="col-lg-8 home-image-pane"></div>
            <div class="col-lg-4 d-flex home-content-pane">
                <div class="welcome-card flex-fill">
                    <h1>Character Manager</h1>
                    <p class="lead"><LocalizedText Key="home.welcome" /></p>
                                        
                    <div class="features-section">
                        <h3><LocalizedText Key="home.features" /></h3>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="features-list">
                                    <li><strong><LocalizedText Key="navigation.squad" /> :</strong> <LocalizedText Key="home.squad" /></li>
                                    <li><strong><LocalizedText Key="navigation.inventory" /> :</strong> <LocalizedText Key="home.inventory" /></li>
                                    <li><strong><LocalizedText Key="home.bulkLabel" /> :</strong> <LocalizedText Key="home.bulk" /></li>
                                    <li><strong><LocalizedText Key="home.detailsLabel" /> :</strong> <LocalizedText Key="home.details" /></li>
                                    <li><strong><LocalizedText Key="home.csvLabel" /> :</strong> <LocalizedText Key="home.csvImport" /></li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="features-list">
                                    <li><strong><LocalizedText Key="home.dynamicLabel" /> :</strong> <LocalizedText Key="home.dynamicImages" /></li>
                                    <li><strong><LocalizedText Key="home.ranksLabel" /> :</strong> <LocalizedText Key="home.ranks" /></li>
                                    <li><strong><LocalizedText Key="home.powerLabel" /> :</strong> <LocalizedText Key="home.power" /></li>
                                    <li><strong><LocalizedText Key="home.filtersLabel" /> :</strong> <LocalizedText Key="home.filters" /></li>
                                    <li><strong><LocalizedText Key="home.sqliteLabel" /> :</strong> <LocalizedText Key="home.sqlite" /></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
