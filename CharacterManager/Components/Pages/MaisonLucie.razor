@page "/maison-lucie"
@using CharacterManager.Components.Layout
@using CharacterManager.Server.Services
@using CharacterManager.Server.Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@rendermode InteractiveServer

@inject PersonnageService PersonnageService
@inject NavigationManager NavigationManager

<link rel="stylesheet" href="/css/MaisonLucie.css" />

<div class="lucie-house-container">
    <div class="lucie-house-header">
        <div class="lucie-house-title-section">
            <i class="bi bi-house-fill lucie-icon"></i>
            <h1><LocalizedText Key="navigation.lucieHouse" /></h1>
        </div>
        
        @if (lucieHouse != null)
        {
            <div class="d-flex align-items-center gap-3">
                <div class="affection-badge">
                    <i class="bi bi-heart-fill"></i>
                    <span class="affection-value">@lucieHouse.Affection</span>
                    <span class="affection-label">Affection</span>
                </div>

                <div class="lucie-house-actions d-flex align-items-center gap-2">
                    <label class="btn btn-outline-secondary mb-0" for="lucieImportFile" title="Importer une sauvegarde Lucie House">
                        <i class="bi bi-upload"></i> Importer
                    </label>
                    <InputFile id="lucieImportFile" class="d-none" accept=".pml,.xml" OnChange="HandleLucieImport" />

                    <button class="btn btn-outline-success" @onclick="ExportLucieHouse" title="Exporter Lucie House">
                        <i class="bi bi-download"></i> Exporter
                    </button>
                </div>
            </div>
        }
    </div>

    @if (lucieHouse == null)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p><LocalizedText Key="loading" /></p>
        </div>
    }
    else if (pieces.Count == 0)
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <p><LocalizedText Key="noData" /></p>
        </div>
    }
    else
    {
        <div class="pieces-grid">
            @foreach (var piece in pieces.OrderByDescending(p => p.Puissance).ToList())
            {
                <div class="piece-card">
                    <div class="piece-header">
                        <h3 class="piece-name" title="@piece.Nom">@piece.Nom</h3>
                        <span class="piece-level">Lvl @piece.Niveau</span>
                    </div>

                    <div class="piece-body">
                        <!-- Puissance Totale -->
                        <div class="stat-row">
                            <span class="stat-label">Puissance</span>
                            <span class="stat-value">@piece.Puissance</span>
                        </div>

                        <!-- Aspect Tactique -->
                        @if (piece.AspectsTactiques != null)
                        {
                            <div class="aspect-section">
                                <div class="aspect-header">
                                    <i class="bi bi-lightning-fill"></i>
                                    <span>Tactique</span>
                                </div>
                                <div class="aspect-content">
                                    <div class="aspect-puissance">
                                        <span class="label">Puissance:</span>
                                        <span class="value">@piece.AspectsTactiques.Puissance</span>
                                    </div>
                                    @if (piece.AspectsTactiques.Bonus?.Count > 0)
                                    {
                                        <div class="aspect-bonus">
                                            <span class="label">Bonus:</span>
                                            <div class="bonus-list">
                                                @foreach (var bonus in piece.AspectsTactiques.Bonus)
                                                {
                                                    <span class="bonus-tag">@bonus</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Aspect Stratégie -->
                        @if (piece.AspectsStrategiques != null)
                        {
                            <div class="aspect-section">
                                <div class="aspect-header">
                                    <i class="bi bi-shield-fill"></i>
                                    <span>Stratégique</span>
                                </div>
                                <div class="aspect-content">
                                    <div class="aspect-puissance">
                                        <span class="label">Puissance:</span>
                                        <span class="value">@piece.AspectsStrategiques.Puissance</span>
                                    </div>
                                    @if (piece.AspectsStrategiques.Bonus?.Count > 0)
                                    {
                                        <div class="aspect-bonus">
                                            <span class="label">Bonus:</span>
                                            <div class="bonus-list">
                                                @foreach (var bonus in piece.AspectsStrategiques.Bonus)
                                                {
                                                    <span class="bonus-tag">@bonus</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Bonus Totaux -->
                        <div class="bonus-totals">
                            <div class="bonus-row">
                                <span class="bonus-label">Total Tactique:</span>
                                <span class="bonus-value">@(piece.BonusTactiques?.Count ?? 0)</span>
                            </div>
                            <div class="bonus-row">
                                <span class="bonus-label">Total Stratégique:</span>
                                <span class="bonus-value">@(piece.BonusStrategiques?.Count ?? 0)</span>
                            </div>
                        </div>

                        <!-- Sélection -->
                        <div class="selection-indicator">
                            @if (piece.Selectionnee)
                            {
                                <span class="selected-badge"><i class="bi bi-check-circle-fill"></i> Sélectionnée</span>
                            }
                            else
                            {
                                <span class="not-selected-badge"><i class="bi bi-circle"></i> Non sélectionnée</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Statistiques Globales -->
        <div class="statistics-section">
            <h2><LocalizedText Key="statistics" /></h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <span class="stat-title">Total Pièces</span>
                    <span class="stat-number">@pieces.Count</span>
                </div>
                <div class="stat-card">
                    <span class="stat-title">Pièces Sélectionnées</span>
                    <span class="stat-number">@pieces.Count(p => p.Selectionnee)</span>
                </div>
                <div class="stat-card">
                    <span class="stat-title">Puissance Max Tactique</span>
                    <span class="stat-number">@pieces.Max(p => p.AspectsTactiques?.Puissance ?? 0)</span>
                </div>
                <div class="stat-card">
                    <span class="stat-title">Puissance Max Stratégique</span>
                    <span class="stat-number">@pieces.Max(p => p.AspectsStrategiques?.Puissance ?? 0)</span>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Server.Models.LucieHouse? lucieHouse;
    private List<Server.Models.Piece> pieces = new();
    private bool lucieImporting;
    private bool lucieExporting;

    [Inject]
    public PmlImportService PmlImportService { get; set; } = null!;

    [Inject]
    public IJSRuntime JSRuntime { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await LoadLucieHouseDataAsync();
    }

    private async Task LoadLucieHouseDataAsync()
    {
        try
        {
            lucieHouse = await PersonnageService.GetLucieHouseAsync();

            if (lucieHouse != null)
            {
                // Récupérer les pièces avec leurs aspects
                pieces = await PersonnageService.GetLuciePiecesAsync();
            }
            else
            {
                pieces = new();
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Erreur lors du chargement de la Lucie House: {ex.Message}");
        }
    }

    private async Task ExportLucieHouse()
    {
        if (lucieExporting)
            return;

        lucieExporting = true;

        try
        {
            // Réutilise l'export existant (Lucie House incluse dans l'export inventaire)
            var payload = await PmlImportService.ExporterInventairePmlAsync(Enumerable.Empty<Personnage>());
            var fileName = $"LucieHouse_{DateTime.Now:yyyyMMdd_HHmmss}.pml";
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(payload));
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Erreur export Lucie House: {ex.Message}");
        }
        finally
        {
            lucieExporting = false;
        }
    }

    private async Task HandleLucieImport(InputFileChangeEventArgs e)
    {
        if (lucieImporting)
            return;

        lucieImporting = true;

        try
        {
            var file = e.File;
            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            var result = await PmlImportService.ImportPmlAsync(
                stream,
                file.Name,
                importInventory: true,
                importTemplates: false,
                importBestSquad: false,
                importHistories: false,
                importLeagueHistory: false);

            if (result.IsSuccess)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Import Lucie House réussi ({result.SuccessCount} éléments)");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", result.Error ?? "Import Lucie House échoué");
            }

            await LoadLucieHouseDataAsync();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Erreur import Lucie House: {ex.Message}");
        }
        finally
        {
            lucieImporting = false;
        }
    }
}
