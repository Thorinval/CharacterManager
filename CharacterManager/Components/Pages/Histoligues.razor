@page "/histoligues"
@using CharacterManager.Server.Models
@using CharacterManager.Server.Services
@using CharacterManager.Server.Constants
@using Microsoft.AspNetCore.Components.Forms
@using System.Linq
@inject HistoriqueLigueService HistoriqueLigueService
@inject PmlImportService PmlImportService
@inject IJSRuntime JS

<PageTitle>Historique des Ligues</PageTitle>

<link rel="stylesheet" href="/css/Histoligues.css" />

<div class="histoligues-container">
    <div class="histoligues-header">
        <h1>
            <i class="bi bi-trophy"></i>
            Historique des Ligues
        </h1>
        <div class="histoligues-actions">
            <button class="btn btn-primary" @onclick="OpenCreateModal">
                <i class="bi bi-plus-circle"></i>
                Nouvelle date de montée
            </button>
            <button class="btn btn-success" @onclick="ExporterHistoriquesLigue">
                <i class="bi bi-download"></i>
                Exporter
            </button>
            <label class="btn btn-info mb-0" for="importLeagueHistoryFile">
                <i class="bi bi-upload"></i>
                Importer
            </label>
            <InputFile id="importLeagueHistoryFile" class="d-none" accept=".pml" OnChange="ImporterHistoriquesLigue" />
        </div>
    </div>

    @if (historiques == null)
    {
        <p class="loading">Chargement...</p>
    }
    else if (!historiques.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <p>Aucune date enregistrée</p>
            <button class="btn btn-primary" @onclick="OpenCreateModal">
                Ajouter la première date
            </button>
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="table-histoligues">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Ligue</th>
                        <th>Notes</th>
                        <th class="actions-column">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var historique in historiques)
                    {
                        <tr>
                            <td class="date-cell">@historique.DateMontee.ToString("dd/MM/yyyy")</td>
                            <td class="ligue-cell">
                                @if (historique.Ligue == 50)
                                {
                                    <span class="ligue-badge elite">Elite - Top 50</span>
                                }
                                else
                                {
                                    <span class="ligue-badge ligue-@historique.Ligue">Ligue @historique.Ligue</span>
                                }
                            </td>
                            <td class="notes-cell">@(string.IsNullOrEmpty(historique.Notes) ? "-" : historique.Notes)</td>
                            <td class="actions-cell">
                                <button class="btn-icon btn-edit" @onclick="() => OpenEditModal(historique)" title="Éditer">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn-icon btn-delete" @onclick="() => DeleteHistorique(historique.Id)" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Modal Créer/Éditer -->
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>@(isEdit ? "Éditer la date de montée" : "Nouvelle date de montée")</h3>
                <button class="btn-close" @onclick="CloseModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Date de montée</label>
                    <InputDate Type="InputDateType.Date" @bind-Value="formModel.DateMontee" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Ligue</label>
                    <select @bind="formModel.Ligue" class="form-control">
                        <option value="">Sélectionner</option>
                        @foreach (var ligue in LigueSteps)
                        {
                            <option value="@ligue">Ligue @ligue</option>
                        }
                        <option value="50">Elite - Top 50</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Notes (optionnel)</label>
                    <textarea @bind="formModel.Notes" class="form-control" rows="3" placeholder="Ajouter des notes..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Annuler</button>
                <button class="btn btn-primary" @onclick="SaveHistorique" disabled="@(formModel.Ligue == 0)">
                    @(isEdit ? "Mettre à jour" : "Créer")
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<HistoriqueLigue>? historiques;
    private bool showModal = false;
    private bool isEdit = false;
    private HistoriqueLigue formModel = new();
    private readonly List<int> LigueSteps = Enumerable.Range(1, 25).Reverse().ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        historiques = await HistoriqueLigueService.GetAllAsync();
    }

    private void OpenCreateModal()
    {
        formModel = new HistoriqueLigue { DateMontee = DateOnly.FromDateTime(DateTime.Now) };
        isEdit = false;
        showModal = true;
    }

    private void OpenEditModal(HistoriqueLigue historique)
    {
        formModel = new HistoriqueLigue
        {
            Id = historique.Id,
            DateMontee = historique.DateMontee,
            Ligue = historique.Ligue,
            Notes = historique.Notes
        };
        isEdit = true;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        formModel = new();
    }

    private async Task SaveHistorique()
    {
        if (formModel.Ligue == 0) return;

        if (isEdit)
        {
            await HistoriqueLigueService.UpdateAsync(formModel);
        }
        else
        {
            await HistoriqueLigueService.AddAsync(formModel);
        }

        CloseModal();
        await LoadData();
    }

    private async Task DeleteHistorique(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Êtes-vous sûr de vouloir supprimer cette date de montée ?");
        if (confirmed)
        {
            await HistoriqueLigueService.DeleteAsync(id);
            await LoadData();
        }
    }

    private async Task ExporterHistoriquesLigue()
    {
        try
        {
            var options = PmlExportOptions.FromBooleans(
                exportInventory: false,
                exportTemplates: false,
                exportBestSquad: false,
                exportHistories: false,
                exportLeagueHistory: true);

            var bytes = await PmlImportService.ExportPmlAsync(options);
            var fileName = $"{AppConstants.ExportPrefixes.HistoriqueLigues}_{DateTime.Now.ToString(AppConstants.DateTimeFormats.FileNameDateTime)}{AppConstants.FileExtensions.Pml}";
            var base64 = Convert.ToBase64String(bytes);
            await JS.InvokeVoidAsync("downloadFile", fileName, base64);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Erreur lors de l'export: {ex.Message}");
        }
    }

    private async Task ImporterHistoriquesLigue(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null)
        {
            return;
        }

        var isSupported = file.Name.EndsWith(AppConstants.FileExtensions.Pml, StringComparison.OrdinalIgnoreCase);

        if (!isSupported)
        {
            await JS.InvokeVoidAsync("alert", "Veuillez sélectionner un fichier PML.");
            return;
        }

        try
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            var result = await PmlImportService.ImportPmlAsync(
                stream,
                file.Name,
                importInventory: false,
                importTemplates: false,
                importBestSquad: false,
                importHistories: false,
                importLeagueHistory: true);

            var importMessage = result.SuccessCount > 0
                ? $"{result.SuccessCount} enregistrement(s) importé(s) avec succès."
                : "Aucun enregistrement importé.";

            if (!string.IsNullOrEmpty(result.Error))
            {
                importMessage += $"\nErreur: {result.Error}";
            }

            if (result.Errors.Count > 0)
            {
                var preview = string.Join("\n", result.Errors.Take(3));
                importMessage += $"\nDétails (aperçu):\n{preview}";
            }

            await JS.InvokeVoidAsync("alert", importMessage);
            await LoadData();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Erreur lors de l'import: {ex.Message}");
        }
    }
}
