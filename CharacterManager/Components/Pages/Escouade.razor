@page "/escouade"

@using CharacterManager.Server.Models
@using CharacterManager.Server.Services
@rendermode InteractiveServer

@inject PersonnageService PersonnageService
@inject NavigationManager Navigation

<PageTitle>Escouade</PageTitle>

<div class="page-header-banner escouade-header">
    <div class="header-left"></div>

    <div class="header-center">
        <div class="puissance-header">
            <img src="/images/puissance.png" alt="Puissance" class="puissance-image-header" onerror="this.style.display='none';" />
            <span class="puissance-number-header">@puissanceEscouade</span>
        </div>
    </div>

    <div class="header-body">
        @if (personnagesEscouade.Any())
        {
            <div class="escouade-preview-section mb-0">
                <div class="escouade-images">
                    @foreach (var perso in personnagesEscouade.Where(p => p.Type == TypePersonnage.Mercenaire).OrderByDescending(p => p.Puissance))
                    {
                        var currentId = perso.Id;
                        var returnPath = "/escouade";
                        <div class="escouade-member-preview clickable" @onclick="@(() => NavigateToDetail(currentId, GetFilterForEscouade(), returnPath))">
                            <img src="@perso.ImageUrlSelected" alt="@perso.Nom" class="escouade-image" onerror="this.onerror=null; this.src='/images/personnages/default.png';" />
                            <div class="escouade-member-name">@perso.Nom</div>
                            <div class="escouade-member-power">@perso.Puissance</div>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="header-right">
            @if (commandants.Any())
            {
                var cmd = commandants.First();
                <img src="@cmd.ImageUrlPreview" alt="@cmd.Nom" class="commandant-hero" onerror="this.onerror=null; this.src='/images/personnages/default.png';" />
            }
        </div>
    </div>

    <h1 class="page-title"></h1>
</div>


@if (personnagesEscouade.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Aucun mercenaire n'a été sélectionné pour l'escouade.
    </div>
}
else
{
<div class="section-header commandant-header">
    <h2>Commandant</h2>
</div>
    <div class="personnages-list">
        @foreach (var perso in commandants)
        {
            var currentId = perso.Id;
            var returnPath = "/escouade";
            <div class="personnage-card clickable" @onclick="@(() => NavigateToDetail(currentId, GetFilterForCommandants(), returnPath))">
                <img src="@perso.ImageUrlPreview" alt="@perso.Nom" class="personnage-card-image" onerror="this.onerror=null; this.src='/images/personnages/default.png';" />
                <div class="personnage-card-info">
                    <div class="personnage-name">@perso.Nom</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rareté:</span> @perso.Rarete</div>
                    <div class="personnage-attribute"><span class="attribute-label">Puissance:</span> @perso.Puissance</div>
                    <div class="personnage-attribute"><span class="attribute-label">Niveau:</span> @perso.Niveau</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rang:</span> @GetRankStars(perso.Rang)</div>
                    <div class="personnage-attribute"><span class="attribute-label">Faction:</span> @perso.Faction</div>
                </div>
            </div>
        }
    </div>
    <br />
    <div class="section-header">
        <h2>Mercenaires (@mercenaires.Count)</h2>
    </div>
    <div class="personnages-list">
        @foreach (var perso in mercenaires)
        {
            var currentId = perso.Id;
            var returnPath = "/escouade";
            <div class="personnage-card clickable" @onclick="@(() => NavigateToDetail(currentId, GetFilterForMercenaires(), returnPath))">
                <img src="@perso.ImageUrlPreview" alt="@perso.Nom" class="personnage-card-image" onerror="this.onerror=null; this.src='/images/personnages/default.png';" />
                <div class="personnage-card-info">
                    <div class="personnage-name">@perso.Nom</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rareté:</span> @perso.Rarete</div>
                    <div class="personnage-attribute"><span class="attribute-label">Puissance:</span> @perso.Puissance</div>
                    <div class="personnage-attribute"><span class="attribute-label">Niveau:</span> @perso.Niveau</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rang:</span> @GetRankStars(perso.Rang)</div>
                    <div class="personnage-attribute"><span class="attribute-label">Faction:</span> @perso.Faction</div>
                </div>
            </div>
        }
    </div>
    <br />
    <div class="section-header">
        <h2>Androïdes</h2>
    </div>
    <div class="personnages-list">
        @foreach (var perso in androides)
        {
            var currentId = perso.Id;
            var returnPath = "/escouade";
            <div class="personnage-card clickable" @onclick="@(() => NavigateToDetail(currentId, GetFilterForAndroides(), returnPath))">
                <img src="@perso.ImageUrlPreview" alt="@perso.Nom" class="personnage-card-image" onerror="this.onerror=null; this.src='/images/personnages/default.png';" />
                <div class="personnage-card-info">
                    <div class="personnage-name">@perso.Nom</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rareté:</span> @perso.Rarete</div>
                    <div class="personnage-attribute"><span class="attribute-label">Puissance:</span> @perso.Puissance</div>
                    <div class="personnage-attribute"><span class="attribute-label">Niveau:</span> @perso.Niveau</div>
                </div>
            </div>
        }
    </div>
}

