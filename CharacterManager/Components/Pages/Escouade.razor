@page "/escouade"
@layout CharacterManager.Components.Layout.MainLayout

@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using CharacterManager.Server.Constants
@using CharacterManager.Server.Models
@using CharacterManager.Server.Services
@using CharacterManager.Components

@rendermode InteractiveServer

@inject PersonnageService PersonnageService
@inject NavigationManager Navigation

<link rel="stylesheet" href="/css/Escouade.css" />

<div class="page-header-banner escouade-header clickable" @onclick="@(() => NavigateToCommandantDetail())">
    <div class="header-background-right" @onclick:stopPropagation="true">
        <img src="@GetCommandantHeaderImage()" alt="" class="header-bg-image" />
    </div>
    <div class="header-center">
        <div class="puissance-header">
            <img src="@AppConstants.Paths.ImagesInterface/fond_puissance.png" alt="Puissance" class="puissance-image-header" onerror="this.style.display='none';" />
            <span class="puissance-number-header">@puissanceEscouade</span>
        </div>
    </div>

    <div class="header-body" @onclick:stopPropagation="true">
        @if (personnagesEscouade.Any())
        {
            <div class="escouade-preview-section mb-0" @onclick:stopPropagation="true">
                <div class="escouade-images">
                    @foreach (var perso in personnagesEscouade.Where(p => p.Type == TypePersonnage.Mercenaire).OrderByDescending(p => p.Puissance))
                    {
                        var currentId = perso.Id;
                        var returnPath = AppConstants.Routes.Escouade;
                        <div class="escouade-member-preview clickable" @onclick="@(() => NavigateToDetail(currentId, TemplateEscouade.GetFilterForEscouade(), returnPath))" @onclick:stopPropagation="true">
                            <img src="@perso.ImageUrlSelected" alt="@perso.Nom" class="escouade-image" @onclick="@(() => NavigateToDetail(currentId, TemplateEscouade.GetFilterForEscouade(), returnPath))" @onclick:stopPropagation="true" />
                            <div class="escouade-member-name">@perso.Nom</div>
                            <div class="escouade-member-power">@perso.Puissance</div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@if (personnagesEscouade.Count == 0)
{
    <div class="alert alert-info" role="alert">
            <LocalizedText Key="squad.noMercenary" />
    </div>
}
else
{
<div class="section-header commandant-header">
        <h2><LocalizedText Key="squad.commander" /></h2>
</div>
    <div class="personnages-list">
        @foreach (var perso in commandants)
        {
            var currentId = perso.Id;
            var returnPath = AppConstants.Routes.Escouade;
            <div class="personnage-card clickable" @onclick="@(() => NavigateToDetail(currentId, TemplateEscouade.GetFilterForCommandants(), returnPath))">
                <img src="@perso.ImageUrlPreview" alt="@perso.Nom" class="personnage-card-image" />
                <div class="personnage-card-info">
                    <div class="personnage-name">@perso.Nom</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rareté:</span> @perso.Rarete</div>
                    <div class="personnage-attribute"><span class="attribute-label">Puissance:</span> @perso.Puissance</div>
                    <div class="personnage-attribute"><span class="attribute-label">Niveau:</span> @perso.Niveau</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rang:</span> @TemplateEscouade.GetRankStars(perso.Rang)</div>
                    <div class="personnage-attribute"><span class="attribute-label">Faction:</span> @perso.Faction</div>
                </div>
            </div>
        }
    </div>
    <br />
    <div class="section-header">
        <h2><LocalizedText Key="squad.mercenaries" /> (@mercenaires.Count)</h2>
    </div>
    <div class="personnages-list">
        @foreach (var perso in mercenaires)
        {
            var currentId = perso.Id;
            var returnPath = AppConstants.Routes.Escouade;
            <div class="personnage-card clickable" @onclick="@(() => NavigateToDetail(currentId, TemplateEscouade.GetFilterForMercenaires(), returnPath))">
                <img src="@perso.GetImageUrl(true)" alt="@perso.Nom" class="personnage-card-image" />
                <div class="personnage-card-info">
                    <div class="personnage-name">@perso.Nom</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rareté:</span> @perso.Rarete</div>
                    <div class="personnage-attribute"><span class="attribute-label">Puissance:</span> @perso.Puissance</div>
                    <div class="personnage-attribute"><span class="attribute-label">Niveau:</span> @perso.Niveau</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rang:</span> @TemplateEscouade.GetRankStars(perso.Rang)</div>
                    <div class="personnage-attribute"><span class="attribute-label">Faction:</span> @perso.Faction</div>
                </div>
            </div>
        }
    </div>
    <br />
    <div class="section-header">
        <h2><LocalizedText Key="squad.androids" /></h2>
    </div>
    <div class="personnages-list">
        @foreach (var perso in androides)
        {
            var currentId = perso.Id;
            var returnPath = AppConstants.Routes.Escouade;
            <div class="personnage-card clickable" @onclick="@(() => NavigateToDetail(currentId, TemplateEscouade.GetFilterForAndroides(), returnPath))">
            <img src="@perso.GetImageUrl(true)" alt="@perso.Nom" class="personnage-card-image" />
                <div class="personnage-card-info">
                    <div class="personnage-name">@perso.Nom</div>
                    <div class="personnage-attribute"><span class="attribute-label">Rareté:</span> @perso.Rarete</div>
                    <div class="personnage-attribute"><span class="attribute-label">Puissance:</span> @perso.Puissance</div>
                    <div class="personnage-attribute"><span class="attribute-label">Niveau:</span> @perso.Niveau</div>
                </div>
            </div>
        }
    </div>

    <br />
    <div class="section-header">
        <h2>Maison de Lucie (@luciePieces.Count)</h2>
    </div>
    @if (luciePieces.Any())
    {
        <div class="personnages-list">
            @foreach (var piece in luciePieces)
            {
                <div class="personnage-card lucie-piece-card @(piece.Selectionnee ? "lucie-piece-selected" : string.Empty)">
                    <div class="personnage-card-info">
                        <div class="personnage-name">@piece.Nom</div>
                        <div class="personnage-attribute"><span class="attribute-label">Niveau:</span> @piece.Niveau</div>
                        <div class="personnage-attribute"><span class="attribute-label">Puissance:</span> @GetPiecePower(piece)</div>
                        <div class="personnage-attribute"><span class="attribute-label">Puissance tactique:</span> @piece.AspectsTactiques.Puissance</div>
                        <div class="personnage-attribute"><span class="attribute-label">Puissance stratégique:</span> @piece.AspectsStrategiques.Puissance</div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">Aucune pièce sélectionnée</div>
    }
}

@if (showModal)
{
    <div class="modal-overlay" @onclick:stopPropagation="true">
        <div class="modal-dialog-custom" @onclick:stopPropagation="true">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditing ? "Éditer Personnage" : "Ajouter")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="nom" @bind="currentPersonnage.Nom" />
                    </div>
                    <div class="mb-3">
                        <label for="rarete" class="form-label">Rareté</label>
                        <select class="form-control" id="rarete" @bind="currentPersonnage.Rarete">
                            @foreach (var rarete in Enum.GetValues(typeof(Rarete)))
                            {
                                <option value="@rarete">@rarete</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="niveau" class="form-label">Niveau</label>
                        <input type="number" class="form-control" id="niveau" @bind="currentPersonnage.Niveau" />
                    </div>
                    <div class="mb-3">
                        <label for="puissance" class="form-label">Puissance</label>
                        <div class="input-group input-group-sm">
                            <button class="btn btn-outline-secondary" type="button" @onclick="() => ChangePuissanceEscouade(-1)" @onclick:stopPropagation="true">-</button>
                            <input type="number" class="form-control text-center" id="puissance" @bind="currentPersonnage.Puissance" />
                            <button class="btn btn-outline-secondary" type="button" @onclick="() => ChangePuissanceEscouade(1)" @onclick:stopPropagation="true">+</button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="type" class="form-label">Type</label>
                        <select class="form-control" id="type" @bind="currentPersonnage.Type">
                            @foreach (var type in Enum.GetValues(typeof(TypePersonnage)))
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Rôle</label>
                        <select class="form-control" id="role" @bind="currentPersonnage.Role">
                            @foreach (var role in Enum.GetValues(typeof(Role)))
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="faction" class="form-label">Faction</label>
                        <select class="form-control" id="faction" @bind="currentPersonnage.Faction">
                            @foreach (var faction in Enum.GetValues(typeof(Faction)))
                            {
                                <option value="@faction">@faction</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="action" class="form-label">Type d'attaque</label>
                        <select class="form-control" id="action" @bind="currentPersonnage.TypeAttaque">
                            @foreach (var typeAttaque in Enum.GetValues(typeof(TypeAttaque)))
                            {
                                <option value="@typeAttaque">@typeAttaque</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="rang" class="form-label">Rang (0-7)</label>
                        <input type="number" class="form-control" id="rang" @bind="currentPersonnage.Rang" min="0" max="7" />
                    </div>
                    <div class="mb-3">
                        <label for="pa" class="form-label">PA (Points d'Attaque)</label>
                        <input type="number" class="form-control" id="pa" @bind="currentPersonnage.PA" />
                    </div>
                    <div class="mb-3">
                        <label for="pv" class="form-label">PV (Points de Vie)</label>
                        <input type="number" class="form-control" id="pv" @bind="currentPersonnage.PV" />
                    </div>
                    <div class="mb-3">
                        <label for="imageHeader" class="form-label">URL Image Header</label>
                        <input type="text" class="form-control" id="imageHeader" @bind="currentPersonnage.ImageUrlHeader" />
                    </div>
                    <div class="mb-3">
                        <p class="text-muted">Les URLs des images portrait et sélection sont générées automatiquement à partir du nom du personnage.</p>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" @bind="currentPersonnage.Description" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Annuler</button>
                    <button type="button" class="btn btn-primary" @onclick="SavePersonnage">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
}


