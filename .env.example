# Configuration pour Google Cloud Deployment
# Copier en .env et adapter les valeurs

# ═══════════════════════════════════════════════════════════════
# Google Cloud Configuration
# ═══════════════════════════════════════════════════════════════

# ID du projet GCP
GCP_PROJECT_ID=character-manager-prod

# Région de déploiement (europe-west1 = Belgique/Pays-Bas)
GCP_REGION=europe-west1

# Type de déploiement: CloudRun ou ComputeEngine
DEPLOYMENT_TYPE=CloudRun

# Nom du service
SERVICE_NAME=character-manager

# ═══════════════════════════════════════════════════════════════
# Application Configuration
# ═══════════════════════════════════════════════════════════════

# Environnement (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Production

# Port d'écoute (8080 pour Cloud Run, 5269 pour local)
ASPNETCORE_URLS=http://+:8080

# ═══════════════════════════════════════════════════════════════
# Database Configuration (Cloud SQL)
# ═══════════════════════════════════════════════════════════════

# Type de BD: PostgreSQL, MySQL, ou SQLite
DB_TYPE=PostgreSQL

# Connexion PostgreSQL Cloud SQL
# Format: Server=cloudsql-proxy;Port=5432;Database=nom_db;User=user;Password=pass
# CloudSQL en automatique via Cloud SQL Proxy à localhost:5432
DB_CONNECTION_STRING=Server=localhost;Port=5432;Database=character_manager;User=app_user;Password=YOUR_STRONG_PASSWORD_HERE;

# Instance Cloud SQL (format: PROJECT_ID:REGION:INSTANCE_NAME)
CLOUD_SQL_INSTANCE=character-manager-prod:europe-west1:character-manager-db

# ═══════════════════════════════════════════════════════════════
# Storage Configuration
# ═══════════════════════════════════════════════════════════════

# Type de stockage: Local, GoogleCloudStorage
STORAGE_TYPE=Local

# Bucket Google Cloud Storage (si applicable)
# GCS_BUCKET=character-manager-images

# ═══════════════════════════════════════════════════════════════
# Authentication & Security
# ═══════════════════════════════════════════════════════════════

# Clé secrète pour les sessions (générer avec: [System.Convert]::ToBase64String([System.Text.Encoding]::UTF8.GetBytes([System.Guid]::NewGuid().ToString())))
SECRET_KEY=YOUR_SECRET_KEY_HERE

# Hôte autorisé (remplacer par votre domaine)
ALLOWED_HOST=character-manager-prod.run.app

# ═══════════════════════════════════════════════════════════════
# Cloud Run Specific
# ═══════════════════════════════════════════════════════════════

# Mémoire allouée (256Mi, 512Mi, 1Gi, 2Gi, 4Gi, 6Gi, 8Gi)
CLOUD_RUN_MEMORY=512Mi

# CPU alloué (1, 2, 4, 6, 8)
CLOUD_RUN_CPU=1

# Timeout en secondes
CLOUD_RUN_TIMEOUT=3600

# Nombre minimal d'instances (0 pour serverless total, 1+ pour réduire les cold starts)
CLOUD_RUN_MIN_INSTANCES=1

# ═══════════════════════════════════════════════════════════════
# Compute Engine Specific
# ═══════════════════════════════════════════════════════════════

# Type de machine (e2-medium, e2-large, n1-standard-1, etc.)
GCE_MACHINE_TYPE=e2-medium

# Zone de déploiement
GCE_ZONE=europe-west1-b

# Taille du disque de boot en GB
GCE_BOOT_DISK_SIZE=30

# ═══════════════════════════════════════════════════════════════
# Monitoring & Logging
# ═══════════════════════════════════════════════════════════════

# Activer Cloud Logging
ENABLE_CLOUD_LOGGING=true

# Activer Cloud Monitoring
ENABLE_CLOUD_MONITORING=true

# Niveau de log (Trace, Debug, Information, Warning, Error, Critical)
LOG_LEVEL=Information

# ═══════════════════════════════════════════════════════════════
# Docker Registry (Artifact Registry)
# ═══════════════════════════════════════════════════════════════

# URI du registre d'artefacts
ARTIFACT_REGISTRY_URL=europe-west1-docker.pkg.dev

# Nom du repository
ARTIFACT_REGISTRY_REPO=character-manager

# Nom de l'image
ARTIFACT_REGISTRY_IMAGE=app

# ═══════════════════════════════════════════════════════════════
# Optional: Custom Domain
# ═══════════════════════════════════════════════════════════════

# Domaine personnalisé (pour cloud run domain mapping)
CUSTOM_DOMAIN=

# Email pour certificat SSL (Let's Encrypt)
CERTBOT_EMAIL=
